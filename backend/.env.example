# Nexus AI - Backend Environment Variables
# Copy this file to .env and fill in your values for local development.

# --- Core API Configuration ---
# The environment the app is running in (development, production)
DEBUG=True
# Host for the FastAPI server
HOST=0.0.0.0
# Port for the FastAPI server
PORT=8000
# Allowed frontend origins (CORS)
FRONTEND_URL=http://localhost:5173

# --- Security & Authentication ---
# Generate a strong key using `openssl rand -hex 32`
SECRET_KEY=your-super-secret-key-change-in-production
# JWT signing algorithm
ALGORITHM=HS256
# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# --- AI Orchestration (LLMs) ---
# Primary OpenAI API Key (Required for GPT-4/GPT-3.5)
OPENAI_API_KEY=your-openai-api-key-here
# Optional: Groq API Key for faster inference
GROQ_API_KEY=your-groq-api-key
# Default models used by agents
DEFAULT_MODEL=gpt-4-turbo-preview
FAST_MODEL=gpt-3.5-turbo

# --- Database Configuration ---
# SQLAlchemy connection string (PostgreSQL, SQLite, etc.)
# Default: Local Docker PostgreSQL
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5432/nexus_ai_dev

# --- Memory & Context (Vector Store) ---
# Directory where ChromaDB will store vector embeddings
CHROMADB_DIR=./data/chromadb
# Embedding model used for semantic memory
EMBEDDING_MODEL=text-embedding-3-small
# Seconds before embedding cache is cleared (Default: 7 days)
EMBEDDING_CACHE_TTL=604800

# --- Task Queue & Caching (Redis) ---
# Connection string for your Redis instance
REDIS_URL=redis://localhost:6379/0
# Redis timeout settings
REDIS_CONNECT_TIMEOUT=5

# --- External Tools (Optional) ---
# Keys for web search capabilities (ResearcherAgent)
SERPAPI_KEY=your-serpapi-key
TAVILY_API_KEY=your-tavily-api-key

# --- Storage ---
# Root directory for uploaded files and assets
STORAGE_DIR=./storage
# Max file upload size in bytes (Default: 10MB)
MAX_UPLOAD_SIZE=10485760
